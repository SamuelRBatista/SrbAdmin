@model IEnumerable<SrbComercialAdmin.Models.Product>

<div class="details">
    <div class="recentOrders">
        <div class="cardHeader">
            <h2>Produtos</h2>
            <a asp-controller="Product" asp-action="Create" class="btn">Cadastrar</a>
        </div>
        <table>
            <thead>
                <tr>
                    
                    <td>Ean</td>
                    <td>Nome</td>
                    <td>Preço</td>
                    <td>Quantidade</td>
                    <td>Ações</td>
                </tr>
            </thead>

            <tbody>
                @if (Model != null)
                {
                    foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.Ean</td>
                            <td>@product.Name</td>
                            <td>@product.Price.ToString("C")</td>
                            <td>@product.Quantity</td>
                            <td>                                
                                <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn">Editar</a>
                                <form asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" method="post" style="display:inline;" onsubmit="return confirm('Tem certeza que deseja excluir este produto?');">
                                    <button type="submit" class="btn btn-danger">Excluir</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4">Nenhum produto encontrado.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
